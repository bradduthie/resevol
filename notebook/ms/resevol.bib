journal = {Evolutionary Applications},
keywords = {Additive genes,Evolution,Inheritance,Mendelian segregation,Polygenic resistance},
number = {2},
pages = {231--242},
title = {{Evolved polygenic herbicide resistance in Lolium rigidum by low-dose herbicide selection within standing genetic variation}},
