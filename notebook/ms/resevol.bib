file = {:home/brad/Dropbox/papers/South_Hastings2018.pdf:pdf},
issn = {14752875},
journal = {Malaria Journal},
keywords = {Infectious diseases,Insecticide resistance,Malaria,Mosquitoes,Population genetics,Public health,Vector-borne diseases},
number = {1},
pages = {1--20},
pmid = {29448925},
publisher = {BioMed Central},
title = {{Insecticide resistance evolution with mixtures and sequences: A model-based explanation}},
url = {https://doi.org/10.1186/s12936-018-2203-y},
volume = {17},
